<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/transparent">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_weight="1.9"
                android:id="@+id/lnr_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/tv_ClientName"
                    android:gravity="left"
                    android:textAlignment="gravity"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

            />
        </LinearLayout>

        <View
            android:background="?android:attr/dividerVertical"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>



        <LinearLayout
            android:layout_weight="2.08"
            android:id="@+id/lnr_open_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_TotalTicket"
                android:textAlignment="center"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <View
            android:background="?android:attr/dividerVertical"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>



        <LinearLayout
            android:layout_weight="2.09"
            android:id="@+id/lnr_received"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_OpenedTickets"
                android:textAlignment="center"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:background="?android:attr/dividerVertical"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>



        <LinearLayout
            android:layout_weight="2.09"
            android:id="@+id/lnr_assigned"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_ResolvedTickets"
                android:textAlignment="center"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:background="?android:attr/dividerVertical"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_weight="2.09"
            android:id="@+id/lnr_resolved"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_ClosedTickets"
                android:textAlignment="center"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <View
            android:background="?android:attr/dividerVertical"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_weight="2.09"
            android:id="@+id/lnr_retrnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_ClientOverDueTickets"
                android:textAlignment="center"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:background="?android:attr/dividerVertical"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_weight="2.05"
            android:id="@+id/lnr_sftwr_pending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_SoftwarePending"
                android:textAlignment="center"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:background="?android:attr/dividerVertical"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_weight="2.05"
            android:id="@+id/lnr_client_wait"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/tv_ID_Client"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:textAlignment="center" />
        </LinearLayout>




</LinearLayout>
</LinearLayout>